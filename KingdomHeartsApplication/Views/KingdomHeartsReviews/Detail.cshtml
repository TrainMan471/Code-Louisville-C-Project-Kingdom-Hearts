@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/Site.css" />
    <link rel="stylesheet" href="~/Styles/prettify.css" />
   <title></title>
</head>
<body>
    <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
            <!-- Add menu items here -->
            <li><a href="@Url.Action("Index","KingdomHeartsReviews")">View Reviews</a></li>
            <li><a href="@Url.Action("Create","KingdomHeartsReviews")">Create a Review</a></li>
            <li><a href="@Url.Action("DetailTwo","KingdomHeartsReviews")">KH2</a></li>
            
            <li></li>



        </ul>
    </div>
    
            <div>
                <h1>Game Title: @ViewBag.SeriesTitle</h1>
                <h2>Release Date : @ViewBag.ReleaseYear</h2>

                <br />
                <h5>Game Description:</h5>
                <div>
                    @ViewBag.HtmlDescription
                <img src="~/Images/khone.png" />
            </div>

            <h5>Game Developers</h5>
            <div>
                <ul>
                    @foreach (var developer in ViewBag.GameDevelopers)
                    {
                        <li>@developer</li>
                    }
                </ul>
            </div>
            <h5>Worlds</h5>
            <div>
                <ul>
                    @foreach (var world in ViewBag.Worlds)
                    {
                        <li>@world</li>
                    }
                </ul>

            </div>



        </div>
</body>
</html>
